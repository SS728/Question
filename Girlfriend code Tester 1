<!-- Confetti canvas -->
<canvas id="confetti-canvas"></canvas>

<!-- YouTube Embed for Hello by Clairo, muted autoplay loop -->
<iframe id="yt-player" width="0" height="0" src="https://www.youtube.com/embed/3v6MBHpzZg8?autoplay=1&mute=1&loop=1&playlist=3v6MBHpzZg8" frameborder="0" allow="autoplay" allowfullscreen></iframe>

<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
<script>
  const startBtn = document.getElementById('startBtn');
  const questionDiv = document.getElementById('question');
  const yesBtn = document.getElementById('yesBtn');
  const noBtn = document.getElementById('noBtn');
  const resultDiv = document.getElementById('result');
  const playMusicBtn = document.getElementById('playMusicBtn');
  const ytPlayer = document.getElementById('yt-player');
  let noClickCount = 0;

  startBtn.addEventListener('click', () => {
    startBtn.style.display = 'none';
    questionDiv.style.display = 'block';
  });

  yesBtn.addEventListener('click', () => {
    questionDiv.style.display = 'none';
    resultDiv.style.display = 'block';
    playConfetti();
  });

  noBtn.addEventListener('click', () => {
    noClickCount++;
    const scale = Math.max(0, 1 - noClickCount * 0.2);
    noBtn.style.transform = `scale(${scale})`;
    if (scale <= 0.1) {
      noBtn.style.display = 'none';
    }
  });

  playMusicBtn.addEventListener('click', () => {
    ytPlayer.src = "https://www.youtube.com/embed/3v6MBHpzZg8?autoplay=1&mute=0&loop=1&playlist=3v6MBHpzZg8";
    playMusicBtn.style.display = 'none';
  });

  function playConfetti() {
    const duration = 5 * 1000;
    const end = Date.now() + duration;

    (function frame() {
      confetti({
        particleCount: 5,
        angle: 60,
        spread: 55,
        origin: { x: 0 }
      });
      confetti({
        particleCount: 5,
        angle: 120,
        spread: 55,
        origin: { x: 1 }
      });
      if (Date.now() < end) {
        requestAnimationFrame(frame);
      }
    })();
  }
</script>

